import pandas as pd

def count_result_values(comparison_df):
    # Identify the columns that start with 'Result_'
    result_columns = [col for col in comparison_df.columns if col.startswith('Result_')]
    
    # Dictionary to store counts of each value
    counts = {val: 0 for val in ['pass', 'fail', 'pending delivery', 'blocked', 'day2']}
    
    # Iterate through each Result_ column and count occurrences of each value
    for col in result_columns:
        for val in counts.keys():
            counts[val] += (comparison_df[col] == val).sum()
    
    return counts

# Example usage
comparison_df = pd.DataFrame({
    'Result_1': ['pass', 'fail', 'pending delivery', 'blocked', 'day2', 'pass'],
    'Result_2': ['fail', 'pass', 'pending delivery', 'day2', 'blocked', 'pass'],
    'Other_Column': [1, 2, 3, 4, 5, 6]
})

result_counts = count_result_values(comparison_df)
print(result_counts)
