import pandas as pd

class ScenarioLoader:
    @staticmethod
    def load(file_path):
        scenario_df = pd.read_excel(file_path, sheet_name='scenario')
        scenarios = [Scenario(row['id'], row['name'], row['type'], row['active'], row['scenario_pack_id']) for index, row in scenario_df.iterrows()]
        return scenarios

class TestcaseLoader:
    @staticmethod
    def load(file_path):
        testcase_df = pd.read_excel(file_path, sheet_name='testcase')
        testcases = [Testcase(row['id'], row['name'], row['active'], row['version'], row['type'], row['scenario_id'], row['product_type'], row['event_type']) for index, row in testcase_df.iterrows()]
        return testcases

class FieldLoader:
    @staticmethod
    def load(file_path):
        field_df = pd.read_excel(file_path, sheet_name='field')
        fields = [Field(row['id'], row['name'], row['qwest_type'], row['active']) for index, row in field_df.iterrows()]
        return fields
