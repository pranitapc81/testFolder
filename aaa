import pandas as pd

def count_pass_fail_cells(df):
    result_columns = [col for col in df.columns if col.endswith('_Result')]
    
    pass_counts = df[result_columns].apply(lambda x: x.eq('Pass').sum()).sum()
    fail_counts = df[result_columns].apply(lambda x: x.eq('Fail').sum()).sum()
    
    return pass_counts, fail_counts

# Example usage:
# Assuming `comparison.df` is your pandas DataFrame
data = {
    'ID': [1, 2, 3, 4, 5],
    'Math_Result': ['Pass', 'Fail', 'Pass', 'Pass', 'Fail'],
    'Science_Result': ['Fail', 'Pass', 'Pass', 'Fail', 'Fail']
}
comparison_df = pd.DataFrame(data)

pass_count, fail_count = count_pass_fail_cells(comparison_df)

print(f"Number of cells with 'Pass' value: {pass_count}")
print(f"Number of cells with 'Fail' value: {fail_count}")
