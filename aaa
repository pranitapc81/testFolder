def count_scenarios_pass_fail(comparison_df):
    # Group by scenario_id and check if all test cases in each group passed or failed
    scenario_results = comparison_df.groupby('scenario_id')['overall_status'].agg(lambda x: 'Passed' if all(x == 'Passed') else 'Failed')

    # Count the number of scenarios where all test cases passed and where all test cases failed
    pass_count = (scenario_results == 'Passed').sum()
    fail_count = (scenario_results == 'Failed').sum()

    return pass_count, fail_count
