class DataLoader:
    def __init__(self, file_path):
        self.file_path = file_path

    def load_all_data(self):
        # Load scenarios
        scenarios = ScenarioLoader.load(self.file_path)
        ScenarioService.load_scenarios(scenarios)

        # Load test cases
        testcases = TestcaseLoader.load(self.file_path)
        TestcaseService.load_testcases(testcases)

        # Load fields
        fields = FieldLoader.load(self.file_path)
        FieldService.load_fields(fields)

if __name__ == "__main__":
    excel_file_path = 'path_to_your_excel_file.xlsx'  # Replace with your actual file path
    data_loader = DataLoader(excel_file_path)
    data_loader.load_all_data()
