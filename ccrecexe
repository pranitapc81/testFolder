from openpyxl import load_workbook

class ExcelEditor:
    def __init__(self, file_path):
        self.file_path = file_path
        self.workbook = load_workbook(file_path)
    
    @classmethod
    def append_row_and_save(cls, file_path, sheet_name, row_data):
        """
        Append a row of data to the specified sheet in the Excel file and save the changes.

        Args:
            file_path (str): Path to the Excel file.
            sheet_name (str): Name of the sheet to append the row to.
            row_data (list): List representing the row data to be appended.
        """
        workbook = load_workbook(file_path)
        
        if sheet_name not in workbook.sheetnames:
            raise ValueError(f"Sheet '{sheet_name}' not found in the Excel file.")
        
        sheet = workbook[sheet_name]
        sheet.append(row_data)
        
        # Save changes after appending the row
        workbook.save(file_path)
