import streamlit as st

# Read the CSV data into a Pandas DataFrame
df = pd.read_csv('csv_data.csv')

# Create a function to transpose a row to a column
def transpose_row_to_column(row):
  """Transposes a row to a column with expected, actual, and result fields.

  Args:
    row: A Pandas Series.

  Returns:
    A Pandas DataFrame with one column per field.
  """

  df = pd.DataFrame(row)
  df.columns = ['expected', 'actual', 'result']
  return df

# Transpose each row to a column
df_transposed = df.apply(transpose_row_to_column, axis=1)

# Display the data in Streamlit
for index, row in df_transposed.iterrows():
  with st.expander(f'Row {index + 1}'):
    st.table(row.to_frame().T)
